<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.activemq.dao.ChatRoomDao">
    <!-- Result Map -->
    <resultMap id="BaseResultMap" type="com.activemq.model.ChatRoom">
        <result column="id" property="id" />
        <result column="chat_room_name" property="chatRoomName" />
        <result column="creator_id" property="creatorId" />
        <result column="create_date" property="createDate" />
        <association property="creator" javaType="com.activemq.model.User">
            <result column="id1" property="id" />
            <result column="username" property="username" />
            <result column="password" property="password" />
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        id,chat_room_name,creator_id,create_date
    </sql>

    <insert id="insert" parameterType="com.activemq.model.ChatRoom" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_room (creator_id,cate_room_name,create_date)
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            #{
            creatorId
            }, #{
chatRoomName
},#{
createDate
}
        </trim>
    </insert>

    <select id="getChatRoomByName" resultMap="BaseResultMap" parameterType="string">
        select
        *
        from chat_room as cr join user as u on cr.creator_id = u.id
        <where>
            <if test="chatRoomName != null">cr.chat_room_name = #{
chatRoomName
}</if>
        </where>
    </select>

    <select id="getChatRoomById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        *
        from chat_room as cr join user as u on cr.creator_id = u.id
        where
        cr.id = #{
_parameter
}

    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select * from chat_room as cr join user as u on cr.creator_id = u.id
    </select>

</mapper>